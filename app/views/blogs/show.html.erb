
<div class="section section-breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
        </div>
      </div>
    </div>
  </div>

      <div class="section">
      <div class="container">
      <div class="row">
        <!-- Blog Post -->
        <div class="col-sm-8">
          <div class="blog-post blog-single-post">
            <div class="single-post-title">
              <h3><%= raw(@blog.title) %></h3>
            </div>
            <div class="single-post-info">
              <i class="glyphicon glyphicon-time"></i><%= @blog.created_at.strftime("%b, %d, %y") %>

            </div>
            <div class="single-post-image">
              <<%= image_tag @blog.thumbnail.url(:large) %>
            </div>
            <div class="single-post-content">
              <h3><%= raw(@blog.sub_title) %></h3>
              <%= raw(@blog.body) %>
            </div>
            <!-- Comments -->
            <div class="post-coments">
                <h4><%= @blog.comments.count %></h4>
                    <%= render @blog.comments %>

              <!-- Comments Form -->
              <h4>Leave a Comment</h4>
              <div class="comment-form-wrapper">
                 <%= render "comments/form" %>
              </div>
              <!-- End Comment Form -->
            </div>
            <!-- End Comments -->
          </div>
        </div>
      </div>
        <!-- End Blog Post -->
        <!-- Sidebar -->
        <div class=".blog-sidebar">
        <div class="sidebar-widget">
          <h4 class="widget-title">Categories</h4>
          <ul class="widget-catg">
              <% Category.all.each do |category| %>
              <li>
                  <%= link_to category.name, blogs_path(category: category.name) %>
              </li>
                  <% end %>
          </ul>
        </div>

    </div>
        <!-- End Sidebar -->
      </div>
    </div>
    </div>

<div class=" container text-center" >
  <p>
<%= link_to 'Edit', edit_blog_path(@blog), class: "btn " %> |

<%= link_to 'Back', blogs_path, class: "btn " %>
</p>
</div>
