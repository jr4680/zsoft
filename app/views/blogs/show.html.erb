  <section id="single-page-header">
    <div class="overlay">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="single-page-header-left">
              <h2>Blog Single</h2>
              <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry</p>
            </div>
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="single-page-header-right">
                  <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Blog Single</li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
        <!-- End single page header -->
        <!-- Blog Post -->
        <section id="blog-archive">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <div class="blog-archive-area">
                  <div class="row">
                    <div class="col-md-8">
                      <div class="blog-archive-left">

                        <!-- Start blog news single -->
                        <article class="blog-news-single">
                            <div class="blog-news-img">
                              <%= image_tag @blog.thumbnail.url(:large) %>
                              </div>
                              <div class="blog-news-title">
                                  <h2><%= raw(@blog.title) %></h2>
                                </div>
                                  <div class="blog-news-details blog-single-details">
                                    <h3><%= raw(@blog.sub_title) %></h3>
                                    <p><%= raw(@blog.body) %></p>
                                  </div>
                              </article>
                          <!-- Comments -->
                                  <div class="post-coments">
                                      <h4><%= @blog.comments.count %></h4>
                                          <%= render @blog.comments %>

                                        <!-- Comments Form -->
                                        <!-- Start Comment box -->

                                          <h4>Leave a Comment</h4>
                                          <div class="comment-form-wrapper">
                                            <%= render "comments/form" %>
                                        </div>
                                      <!-- End Comment Form -->
                                      </div>
                                      <!-- End Comments -->
                                    </div>
                                    <!-- End Blog Post -->
                                    <!-- Sidebar -->
                                    <div class="col-md-4">
                                    <aside class="blog-side-bar">
                                      <div class="sidebar-widget">
                                        <h4 class="widget-title">Categories</h4>
                                        <ul class="widget-catg">
                                          <% Category.all.each do |category| %>
                                          <li>
                                            <%= link_to category.name, blogs_path(category: category.name) %>
                                          </li>
                                          <% end %>
                                        </ul>

                                      </div>
                                    </aside>
                                  </div>

        <!--- End Sidebar -->
                            </div>
                          </div>
                        </div>
                      </div>
                      </div>
                      </section>


<div class=" container text-center" >

<%= link_to 'Edit', edit_blog_path(@blog), class: "btn " %> |

<%= link_to 'Back', blogs_path, class: "btn " %>

</div>
