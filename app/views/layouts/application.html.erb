<!DOCTYPE html>
<html>
<head>
  <title>Zongosoft.com </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag ' https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.transitions.css' %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.js' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>

</head>
<body id="home">

      <header id="header">
          <nav id="main-nav" class="navbar navbar-default navbar-fixed-top" role="banner">
              <div class="container">
                  <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                          <span class="sr-only">Toggle navigation</span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                      </button>
                      <%= link_to root_path, class: "navbar-brand" do %>
                        <%= image_tag "Logo.png" %>
                        <% end %>


                  <div class="collapse navbar-collapse navbar-right">
                      <ul class="nav navbar-nav">
                          <li class="scroll active"><%= link_to "Home", root_path %></li>
                          <li class="scroll">  <%= link_to "Services", root_path %></li>
                          <li class="scroll"><%= link_to "About us", root_path %></li>
                          <li class="scroll"><%= link_to "Projects", projects_path %></li>
                          <li class="scroll">  <%= link_to "Blog", blogs_path %>  </li>
                          <li class="scroll"><a href="#contact-us">Contact</a></li>
                      </ul>
                  </div>
              </div><!--/.container-->
          </nav><!--/nav-->
      </header><!--/header-->
  <!-- Start header -->
  <!-- NavBar-->

<%= yield %>
 <%= insert_paloma_hook %>

		<!-- Footer Section Start -->
		<footer id="footer">
			<div class="container">
					<div class="copyright text-center">
						<p>Designed and Developed by <a href="http://fcoders.tech">Fcoders</a></p>
					</div>
			</div>
		</footer>

</body>
</html>
